	<div class="siteNavContainer" id="siteNavContainer" role="navigation">
	<div class="wrapper">
	<div class="grid" style="padding-top: 0px; padding-bottom: 0px;">
		<div class="nav">
			<a class="navBarLogo">
				<img src="/images/chatLogo.png" style="width: 80px">					
